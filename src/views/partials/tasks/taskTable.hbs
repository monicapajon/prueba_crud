{{#if tasks}}

  <table class="table table-bordered table-hover table-dark text-warning">
    <thead>
      <tr>
        <th>N.</th>
        <th>Title</th>
        <th>Description</th>
        <th>Operations</th>
      </tr>
    </thead>
    <tbody>
      {{#each tasks}}
        <tr>
          <td>{{@index}}</td>
          <td>{{title}}</td>
          <td>{{description}}</td>
          <td>
            {{#if done}}
              <a
                href="/tasks/{{_id}}/toggleDone"
                class="btn btn-dark"
              >Undone</a>
            {{else}}
              <a
                href="/tasks/{{_id}}/toggleDone"
                class="btn btn-info"
              >Done</a>
            {{/if}}

            <a href="/tasks/{{_id}}/delete" class="btn btn-danger">Delete</a>
            <a href="/tasks/{{_id}}/edit" class="btn btn-warning">Update</a>
          </td>
        </tr>

      {{/each}}
    </tbody>
  </table>

{{else}}

  <div  class= "h-100 d-flex align-items-center justify-content center">
    <div class="text-center text-dark">
    <h1>No tasks</h1>
    <img src="/icons/list.png" class="w-50" />
  </div>
  </div>
{{/if}}