<div class="card card-body p-4 rounded-0 bg-dark text-warning">

  <h3>Add a task</h3>
  <form action="/tasks/add" method="post">

    <div>
      <label for="title">Write a title:</label>
      <input
        type="text"
        name="title"
        placeholder="title"
        id="title"
        class="form-control rounded-0 bg-dark text-white"
      />
    </div>

    <div>
      <label for="description">Description:</label>
      <textarea
        name="description"
        placeholder="description"
        id="description"
        class="form-control rounded-0 bg-dark text-white"
      ></textarea>
    </div>

    <button class="btn btn-warning btn-sm mt-2 text-dark">Add</button>
  </form>
</div>